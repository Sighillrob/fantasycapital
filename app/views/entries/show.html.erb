<div data-entry_id="<%= @entry_id %>" data-contest_id="<%= @entry.contest.id %>"
            class="capitalcontent gamecenter">
<!--Login Section-->
<%= form_tag({controller:"entries", action:"admin"}, remote: true, id: "admin_buttons_form") do %>
    <% if ! @contest.live? %>
        <%= submit_tag(value="Make Live", :name => "command") %>
    <% end %>
<% end %>

<ul class="list-inline title">
  <li>
    <!--<h2>DAILY NBA FREEROLL </h2>-->
    <h2><%= @contest.title || "No contest title" %></h2>
  </li>
  <!--<li><span>10x $300k nfl bomb entries</span></li>-->
  <li><span><%= number_to_currency(@contest.prize, unit: '$') %> <%= @contest.sport %> <%= @contest.contest_type %></span></li>
  <li><a id="is_contest_live_text" href="#"><%=  @contest.live? ?  'LIVE IN PLAY' :  'not live' %></a></li>
  <li><span>Started <%= time_ago_in_words(@contest.contest_start) + " ago" %></span></li>
  <!--<li><span>Started 7:00pm ET 12/18</span></li>-->
</ul>
<div class="clearfix"></div>
<!--Tab Section-->
<div class="light_grey freerollbox">
  <ul class="list-inline">
    <li>
      <h4><strong>Multiplayer League</strong></h4>
    </li>
    <li>
      <h4><%= @entries.count %> Entries</h4>
    </li>
    <li>

      <h4>&nbsp;&nbsp;<strong>Entry:</strong><%= number_to_currency(@contest.entry_fee, unit: '$') %></h4>
    </li>
    <li>&nbsp;&nbsp;<a href="#"><span class="green">
         <%= number_to_currency(@contest.prize, unit: '$') %> Prize Pool</span></a>
    </li>
  </ul>
</div>
<!--/Tab Section-->

<li class="game-status-template game-status" style="display:none;">
    <table class="status ">
      <tbody>
      <tr class="white">
        <td class="home-team-alias">UTA</td>
        <td class="home-team-score">86</td>
      </tr>
      <tr>
        <td class="away-team-alias">ORL</td>
        <td class="away-team-score">82</td>
      </tr>
      <tr>
        <td colspan="2"><span class="game-state-text">FINAL</span></td>
      </tr>
      </tbody>
    </table>
</li>
<div class="clearfix">&nbsp;</div>
<!--Status Table-->
<ul class="list-inline freeroll_status">
  <!-- row of relevant games with realtime state, filled in via Javascript -->
</ul>

<!--/.Status Table-->

<!--List Area-->
<table class="freeroll table-responsive">
  <tbody>
  <tr>
    <th>POS</th>
    <th>&nbsp;</th>
    <th>USER</th>
    <th>QUARTERS REMAINING</th>
    <th>SCORE</th>
    <th>PRIZES</th>
  </tr>
  <% @entries.each do |entry| %>
  <tr data-entry-id="<%= entry.id %>">
    <td>1</td>
    <td><%= image_tag "user.png", class: "user"%></td>
    <td><span class="green"><%= entry.lineup.user.username %></span></td>
    <td>5
      <progress value="10" max="100"></progress>
    </td>
    <td class="fantasypoints"><%= entry.current_fantasypoints %></td>
    <!--<td>$300K NFL Bomb Entry</td>-->
    <td><%= number_to_currency(@contest.prize, unit: '$') %> <%= @contest.sport %> <%= @contest.contest_type %></td>
  </tr>
  <% end %>

  </tbody>
</table>
<div class="clearfix"></div>
<div class="users-next green pull-right">NEXT Â»</div>
<div class="clearfix"></div>
<!--/List Area-->

<%= render partial: 'lineup_row_template' %>

<div class="col-md-5 scorecard pull-left" data-entry-id="<%= @entry.id %>">
    <%= render partial: 'inner_scorecard' %>
</div>
<div id="competitor-scorecard" class="col-md-5 scorecard pull-right" data-entry-id="">
  <%= render partial: 'inner_scorecard' %>
</div>

</div>