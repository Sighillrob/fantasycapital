<%= render 'shared/topbar' %>

<header>
  <div class='container'>
    <h1 class='logo'>
      <%= link_to root_path do%>
        <%= image_tag 'main_logo.png', alt: 'Fantasy Capital' %>
       <% end %>
    </h1>

    <% if current_user %>
      <div class='balanceBlock'>
        <strong>Your Balance</strong>
        <strong class='ajax-modal pull-right' id='add-fund' data-url="<%= add_fund_accounts_path %>">
          Add Funds
          <i class="glyphicon glyphicon-plus"></i>
        </strong>
        <h1>
          <sup>$</sup>
          <%= number_to_currency(current_user.account_balance, unit: '') %>
        </h1>
      </div>
    <% end %>

    <div style="clear:both;"></div>
    <div class='navbar navbar-default capitalnavbar' role="navigation">
      <div class='navbar-header'>
        <button class='navbar-toggle' data-target=".mainMenu" data-toggle="collapse" type="button">
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
      </div>
      .<div class='navbar-collapse collapse mainMenu'>
        <ul class='nav navbar-nav'>
          <li class='<%= menu_classes 'home' %>'>
            <%= link_to 'Home', root_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'entries' %>'>
            <%= link_to 'Contests', entries_path %>
          <li class='<%= menu_classes 'contests' %>'>
            <%= link_to 'Contests', contests_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'lineups' %>'>
            <%= link_to 'Lineups', lineups_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'leaderboard' %>'>
            <%= link_to 'Leaderboard', users_leadboard_path%>
            <div class="line"></div>
          </li>
          <li>
            <a href="#">Rules/Faq</a>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'account' %>'>
            <%= link_to 'Account', profile_accounts_path %>
            <div class="line"></div>
          </li>
          <li class="welcome-box">
            <% if user_signed_in? %>
              <a href="#">
                Welcome, <span class="first-name"><%= current_user.first_name%></span>
              </a>
              <span class="arrow">&#10095;</span>
            <% else %>
              <%= link_to "SIGN UP / LOGIN" , new_user_session_path %>
              <span class="arrow">&#10095;</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
