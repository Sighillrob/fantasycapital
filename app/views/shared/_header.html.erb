<div class='topbarWraper'>
  <div class='navbar navbar-default navbar-static-top capital_top_nav' role="navigation">
    <div class='container'>
      <div class='navbar-header'>
        <button class='navbar-toggle' data-target=".capitalcollapse" data-toggle="collapse" type="button">
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
      </div>
      <div class='navbar-collapse collapse capitalcollapse'>
        <ul class='nav navbar-nav social-links social-link'>
          <li>
            <%= link_to '#_' do %>
              <%= image_tag 'twitter.jpg', alt: 'Fantasy capital Twitter page' %>
              Twitter
            <%end %>
          </li>
          <li>
            <%= link_to '#_' do %>
              <%= image_tag 'facebook.jpg', alt: 'Fantasy capital Facebook page' %>
              Facebook
             <% end %>
          </li>
          <li>
            <%= link_to '#_' do %>
              <%= image_tag 'gplus.jpg', alt: 'Fantasy capital Google Plus page' %>
              Google +
            <% end %>
          </li>
        </ul>
        <ul class='nav navbar-nav navbar-right capital-navbar-right'>
          <li>
            <%= link_to invite_waiting_lists_path do%>
              <strong class='green ajax-modal' >Refer Friends for Cash »</strong>
            <%end%>
          </li>
          <li class='dropdown'>
            <% if user_signed_in? %>
            <a class='dropdown-toggle' data-toggle="dropdown" href="#_">
              Welcome,
              <span class='green'><%= current_user.first_name %></span>
              <b class='downarrow'>&nbsp;</b>
            </a>
            <ul class='dropdown-menu'>
              <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
            </ul>
            <% else %>
              <%= link_to "Sign in", new_user_session_path %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<header>
  <div class='container'>
    <h1 class='logo'>
      <%= link_to root_path do%>
        <%= image_tag 'logo.png', alt: 'Fantasy Capital' %>
       <% end %>
    </h1>

    <% if current_user %>
      <div class='balanceBlock'>
        <h1>Balance: &nbsp;<%= number_to_currency(current_user.account_balance) %></h1>
        <strong class='green ajax-modal' id='add-fund' data-url=<%= add_fund_accounts_path %>>Add Funds »</strong>
      </div>
    <% end %>

    <div class='clear'>&nbsp;</div>
    <div class='navbar navbar-default capitalnavbar' role="navigation">
      <div class='navbar-header'>
        <button class='navbar-toggle' data-target=".mainMenu" data-toggle="collapse" type="button">
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
      </div>
      .<div class='navbar-collapse collapse mainMenu'>
        <ul class='nav navbar-nav'>
          <li class='<%= menu_classes 'home' %>'>
            <%= link_to 'Home', root_path %>
          </li>
          <li class='<%= menu_classes 'contests' %>'>
            <%= link_to 'Contests', contests_path %>
          </li>
          <li class='<%= menu_classes 'lineups' %>'>
            <%= link_to 'Lineups', lineups_path %>
          </li>
          <li>
            <a href="#">Leaderboard</a>
          </li>
          <li>
            <a href="#">Rules/Faq</a>
          </li>
          <li class='<%= menu_classes 'account' %>'>
            <%= link_to 'Account', profile_accounts_path %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
